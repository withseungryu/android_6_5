<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.example.alstm.cal_2015920018.MainActivity">
 <!--#############################계산 결과가 나오는 Layout#######################입니다-->
    <LinearLayout
        android:paddingTop="60dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="bottom"
            android:id="@+id/text_res"
            android:textSize="50dp"
            android:gravity="right|center_vertical"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
 <!--############################버튼들의 Layout입니다.###########################-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px">

        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:id="@+id/btn_ac"
            android:text="AC"
            android:background="@drawable/selector_gray"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_chg"
            android:text="+/-"
            android:background="@drawable/selector_gray"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_mod"
            android:text="%"
            android:background="@drawable/selector_gray"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_div"
            android:text="÷"
            android:background="@drawable/selector_orange"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px">


        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_7"
            android:text="7"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_8"
            android:text="8"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_9"
            android:text="9"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_mul"
            android:text="×"
            android:background="@drawable/selector_orange"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px">

        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_4"
            android:text="4"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_5"
            android:textColor="#000000"
            android:text="5"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_6"
            android:text="6"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_sub"
            android:text="-"
            android:background="@drawable/selector_orange"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout

        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px">

        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_1"
            android:text="1"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_2"
            android:text="2"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_3"
            android:text="3"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="1dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_add"
            android:text="+"
            android:background="@drawable/selector_orange"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px">

        <Button
            android:layout_marginLeft="2dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_0"
            android:text="         0"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_0_1"
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:layout_marginLeft="2dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_dot"
            android:text="."
            android:background="@drawable/selector"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="2dp"
            android:textSize="10pt"
            android:onClick="onClick"
            android:id="@+id/btn_res"
            android:text="="
            android:background="@drawable/selector_orange"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
